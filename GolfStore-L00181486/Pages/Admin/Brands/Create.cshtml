@page
@model GolfStore_L00181486.Pages.Admin.Brands.CreateModel
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create New Brand</h2>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Brand.Name"></label>
            <input asp-for="@Model.Brand.Name" class="form-control" />
            <span asp-validation-for="@Model.Brand.Name" class="text-danger"></span>
        </div>

        

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}