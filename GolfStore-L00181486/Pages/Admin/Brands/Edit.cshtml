@page
@model GolfStore_L00181486.Pages.Admin.Clubs.EditModel
@{
}
<form method="post" enctype="multipart/form-data">
<input hidden asp-for="Club.ClubId" />
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary pl-3">Edit Club</h2>
    </div>
    <div class="row">
        <div class="col-9">

        <div class="mb-3">
            <label asp-for="@Model.Club.Name"></label>
            <input asp-for="@Model.Club.Name" class="form-control" />
            <span asp-validation-for="@Model.Club.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Club.Price"></label>
            <input asp-for="@Model.Club.Price" class="form-control" />
            <span asp-validation-for="@Model.Club.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Club.Forgiveness">Forgiveness</label>
            <select asp-for="@Model.Club.Forgiveness" class="form-select" asp-items="@(Html.GetEnumSelectList<GolfStore.Models.Models.Club.ForgivenessLevel>())">
                <option disabled selected> --Select Forgiveness-- </option>
            </select>
            <span asp-validation-for="@Model.Club.Forgiveness" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Club.Stock">Stock</label>
            <input asp-for="@Model.Club.Stock" type="number" class="form-control" />
            <span asp-validation-for="@Model.Club.Stock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Club.TypeId">Club Type</label>
            <select asp-for="@Model.Club.TypeId" asp-items="@(Model.ClubTypeList)" class="form-select">
                <option disabled selected> --Select Club Type-- </option>
            </select>
            <span asp-validation-for="@Model.Club.TypeId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Club.BrandId">Brand</label>
            <select asp-for="@Model.Club.BrandId" asp-items="@(Model.BrandList)" class="form-select">
                <option disabled selected> --Select Brand-- </option>
            </select>
            <span asp-validation-for="@Model.Club.BrandId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Club.ImgUrl">Image URL</label>
            <input type="file" name="files" id="upLoadBox" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
            </div>
            <div class="col-3">
                <img src="@Model.Club.ImgUrl" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}