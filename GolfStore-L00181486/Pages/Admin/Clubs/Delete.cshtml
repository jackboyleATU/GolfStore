@page
@model GolfStore_L00181486.Pages.Admin.Clubs.DeleteModel
@{
}
<form method="post">
<input hidden asp-for="@Model.Club.ClubId" />
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary pl-3">Delete Club</h2>
    </div>
    <div class="row">
        <div class="col-9">

            <div class="mb-3">
                <label asp-for="@Model.Club.Name"></label>
                <input disabled asp-for="@Model.Club.Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Club.Price"></label>
                <input disabled asp-for="@Model.Club.Price" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Club.Forgiveness">Forgiveness</label>
                <input disabled asp-for="@Model.Club.Forgiveness" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Club.Stock">Stock</label>
                <input disabled asp-for="@Model.Club.Stock" type="number" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Club.TypeId">Club Type</label>
                <input disabled asp-for="@Model.Club.TypeId" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Club.BrandId">Brand</label>
                <input disabled asp-for="@Model.Club.BrandId" class="form-control" />
            </div>

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
            </div>
            <div class="col-3">
                <img src="@Model.Club.ImgUrl" width="100%" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}