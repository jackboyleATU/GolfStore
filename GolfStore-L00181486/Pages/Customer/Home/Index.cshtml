@page "{SearchString?}"
@model GolfStore_L00181486.Pages.Customer.Home.IndexModel
@{
}

<div class="row container pb-3 backgroundWhite">
	<p>
		<form class="d-flex" class="col-3">
			<input type="text" placeholder="Enter Club Name" class="form-control me-sm-2" asp-for="SearchString" />
			<input type="submit" value="Search" class="btn btn-outline-danger" class="form-control align-content-end" />
			<a asp-route-Products="" asp-route-SearchString="" class="btn btn-outline-secondary">Clear</a>
		</form>
	</p>
	</br></br></br>

    @foreach (var brand in Model.listOfBrands)
	{
		<h2 class="text-success pl-1"><b>@brand.Name</b></h2>
		<div class="col-12">
			<div class="row my-3">
				@foreach (var club in Model.listOfClubs.Where(p => p.BrandId == brand.BrandId))
				{
				<div class="col-lg-4 col-md-6 pb-4 filter">
					<div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
						<div class="card-body pb-1 row">
							<div class="col-8 h5">@club.Name</div>
							<div class="col-4 text-end"><span class="text-info h4"> €@club.Price</span></div>
						</div>
						<img class="card-img-top img-fluid d-block mx-auto mb-3" src="@club.ImgUrl" alt="menuitem image">
						<div class="card-body p-1 px-3 row">
							<div class="col-6">
									<span class="badge p-2 border w-100 text-dark bg-warning ">@club.Brand.Name</span>
							</div>
							<div class="col-6 border-0">
									<span class="badge p-2 border w-100 bg-info ">@club.Name</span>
							</div>
							<div class="col-12 pt-2" style="font-size:13px; text-align:justify">
									<p> @club.Forgiveness Forgiveness</p>
							</div>
							<div class="col-12 p-1">
									<a asp-page="Details" asp-route-id="@club.ClubId" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
							</div>
						</div>
					</div>
				</div>
				}
			</div>
		</div>
	}
</div>

